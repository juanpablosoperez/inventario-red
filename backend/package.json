{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "seed": "node src/db/seed.js",
    "migrate": "node src/db/migrate.js",
    "test": "echo \"no tests yet\"",
    "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "test:db": "docker-compose -f docker-compose.test.yml up -d postgres_test",
    "test:clean": "docker-compose -f docker-compose.test.yml down -v",
    "dev:docker": "docker-compose up -d postgres && npm run migrate && npm run seed",
    "prod:deploy": "chmod +x deploy.sh && ./deploy.sh",
    "prod:build": "docker build -t inventario-app:latest .",
    "prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "lint": "echo \"lint ok\""
  },
  "keywords": ["inventario", "api", "express", "postgresql"],
  "author": "",
  "license": "ISC",
  "description": "Backend del sistema de inventario con Express y PostgreSQL",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "pg": "^8.11.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
