# Configuración para PRODUCCIÓN
# Copiar este archivo a .env y configurar con valores reales

# Configuración del servidor
PORT=3000
NODE_ENV=production

# Seguridad de sesiones (OBLIGATORIO cambiar en producción)
SESSION_SECRET=REEMPLAZA_ESTO_CON_UNA_CADENA_LARGA_Y_ALEATORIA_DE_AL_MENOS_32_CARACTERES

# Configuración de PostgreSQL (PRODUCCIÓN)
DB_HOST=tu_host_postgresql_produccion
DB_PORT=5432
DB_NAME=inventario_db_prod
DB_USER=tu_usuario_postgresql
DB_PASSWORD=tu_password_super_seguro_y_largo
DB_SSL=true

# Configuración de cookies para producción
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict
COOKIE_MAX_AGE=86400000

# Configuración de seguridad adicional
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://tu-dominio.com
